# OpenCTI service passwords (change in production!)
OPENCTI_RABBITMQ_PASSWORD=RabbitMQ2024!
OPENCTI_MINIO_SECRET=MinIO2024!

# OpenCTI deployment settings
OPENCTI_ENABLED=true
OPENCTI_STORAGE_SIZE_REDIS=5Gi
OPENCTI_STORAGE_SIZE_ELASTICSEARCH=50Gi
OPENCTI_STORAGE_SIZE_RABBITMQ=10Gi
OPENCTI_STORAGE_SIZE_MINIO=100Gi

# ============================================================================
# ADVANCED CONFIGURATION (Usually no changes needed)
# ============================================================================

# Service Deployment (set to false to skip GPU-dependent services)
ENABLE_STT=auto  # auto, true, or false
ENABLE_TTS=auto  # auto, true, or false

# Kubernetes pod network CIDR
POD_NETWORK_CIDR=10.244.0.0/16

# GPU configuration
GPU_ENABLED=false
GPU_TIME_SLICING_REPLICAS=2