# ============================================================================
# VAST.AI GPU INTEGRATION - NORTH AMERICA LOW LATENCY
# ============================================================================

# Vast.ai API Key (get from: https://console.vast.ai/)
# Required for Virtual Kubelet to manage GPU instances
VAST_API_KEY=your_vast_api_key_here

# Instance selection criteria (optimized for North America low latency)
VAST_GPU_TYPE=RTX3060                    # Primary GPU target
VAST_MIN_GPU_MEMORY=12                   # Minimum GPU memory (GB)
VAST_MAX_PRICE_PER_HOUR=0.50             # Maximum price per hour ($)
VAST_MIN_DOWNLOAD_SPEED=100              # Minimum download speed (Mbps)
VAST_MIN_UPLOAD_SPEED=100                # Minimum upload speed (Mbps)
VAST_DATACENTER_LOCATION=US              # Default: North America for low latency
VAST_RELIABILITY_SCORE=0.95              # Minimum reliability score (0.0-1.0)

# Geographic preferences for low latency (ordered by preference)
# Provider will try: US-West → US-Central → US-East → Canada → Global fallback
VAST_PREFERRED_REGIONS=US-CA,US-TX,US-NY,US,CA

# Advanced Vast.ai API settings (aligned with current API)
VAST_VERIFIED_ONLY=true                  # Only use verified hosts (recommended)
VAST_RENTABLE_ONLY=true                  # Only rentable instances
VAST_ORDER_BY=dph+,reliability-,inet_down-  # Price ascending, reliability descending
VAST_DISK_SPACE=50                       # Disk space (GB)
VAST_INSTANCE_TIMEOUT=3600               # Auto-terminate after seconds (1 hour)
VAST_ENABLE_JUPYTER=false                # Enable Jupyter access
VAST_SSH_ACCESS=false                    # Enable SSH access

# Template configuration for launched instances
VAST_IMAGE_NAME=your-registry/june-gpu-multi:latest
VAST_DOCKER_OPTIONS="-p 8000:8000 -p 8001:8001 --gpus all"

# ============================================================================
# OPTIONAL CONFIGURATION (Change for production!)
# ============================================================================

# PostgreSQL password
POSTGRESQL_PASSWORD=Pokemon123!

# Keycloak admin password
KEYCLOAK_ADMIN_PASSWORD=Pokemon123!

# STUNner TURN server credentials
TURN_USERNAME=june-user
