# june-orchestrator/cloudbuild.yaml
substitutions:
  _REGION: us-central1
  _REPO: june
  _SERVICE: june-orchestrator

steps:
- name: gcr.io/cloud-builders/docker
  args: ['build','-t','${_REGION}-docker.pkg.dev/${PROJECT_ID}/${_REPO}/${_SERVICE}:$COMMIT_SHA','.']
- name: gcr.io/cloud-builders/docker
  args: ['push','${_REGION}-docker.pkg.dev/${PROJECT_ID}/${_REPO}/${_SERVICE}:$COMMIT_SHA']
- name: gcr.io/google.com/cloudsdktool/cloud-sdk
  entrypoint: gcloud
  args:
    - run
    - deploy
    - ${_SERVICE}
    - --image=${_REGION}-docker.pkg.dev/${PROJECT_ID}/${_REPO}/${_SERVICE}:$COMMIT_SHA
    - --region=${_REGION}
    - --platform=managed
    - --allow-unauthenticated
    - --service-account=orchestrator-svc@${PROJECT_ID}.iam.gserviceaccount.com
    - --cpu=1
    - --memory=512Mi
    - --concurrency=10
    - --timeout=3600
    - --min-instances=0

images:
- '${_REGION}-docker.pkg.dev/${PROJECT_ID}/${_REPO}/${_SERVICE}:$COMMIT_SHA'

options:
  logging: CLOUD_LOGGING_ONLY
