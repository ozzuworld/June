# Enhanced Environment Configuration for June AI Services
# This file should be placed at the root of your repository

# GCP Configuration (Update these for your project)
PROJECT_ID=main-buffer-469817-v7
REGION=us-central1
CLUSTER_NAME=june-unified-cluster

# Docker Registry Configuration
REGISTRY=docker.io
DOCKERHUB_USERNAME=your_dockerhub_username_here
DOCKERHUB_EMAIL=your_dockerhub_email_here

# API Keys (These will be set interactively by the bootstrap script)
GEMINI_API_KEY=your_gemini_api_key_here

# Kubernetes Configuration
KUBE_NAMESPACE=june
POD_NETWORK_CIDR=10.244.0.0/16

# Application Configuration
APP_ENV=production
LOG_LEVEL=info

# Service Ports
STT_PORT=8080
TTS_PORT=8000
ORCHESTRATOR_PORT=8080
IDP_PORT=8080
WEB_PORT=3000

# Resource Limits (adjust based on your VM specs)
STT_MEMORY_REQUEST=1Gi
STT_MEMORY_LIMIT=2Gi
STT_CPU_REQUEST=500m
STT_CPU_LIMIT=1000m

TTS_MEMORY_REQUEST=2Gi
TTS_MEMORY_LIMIT=4Gi
TTS_CPU_REQUEST=1000m
TTS_CPU_LIMIT=2000m

ORCHESTRATOR_MEMORY_REQUEST=512Mi
ORCHESTRATOR_MEMORY_LIMIT=1Gi
ORCHESTRATOR_CPU_REQUEST=200m
ORCHESTRATOR_CPU_LIMIT=500m

IDP_MEMORY_REQUEST=512Mi
IDP_MEMORY_LIMIT=1Gi
IDP_CPU_REQUEST=200m
IDP_CPU_LIMIT=500m

# Storage Configuration
STORAGE_CLASS=local-storage
STORAGE_SIZE=50Gi
STORAGE_PATH=/opt/june-data

# Ingress Configuration
INGRESS_CLASS=nginx
API_DOMAIN=api.allsafe.world
IDP_DOMAIN=idp.allsafe.world

# GPU Configuration (set to true if you have NVIDIA GPUs)
GPU_ENABLED=false
GPU_MEMORY_LIMIT=1