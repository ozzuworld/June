# June Platform Configuration Example
# Copy this file to config.env and fill in your values:
#   cp config.env.example config.env
#   nano config.env

# ============================================================================
# REQUIRED CONFIGURATION
# ============================================================================

# Your domain name (without subdomain)
DOMAIN=example.com

# Email for Let's Encrypt SSL certificates
LETSENCRYPT_EMAIL=you@example.com

# Gemini API Key (get from makersuite)
GEMINI_API_KEY=

# Cloudflare API Token (Zone:DNS:Edit)
CLOUDFLARE_TOKEN=

# ============================================================================
# REDIS - Conversation Memory for June Orchestrator
# ============================================================================
# Kubernetes DNS name created by the Helm release in namespace june-services
REDIS_HOST=june-redis-master.june-services.svc.cluster.local
REDIS_PORT=6379
REDIS_DB=1
# Set from: kubectl get secret -n june-services june-redis -o jsonpath="{.data.redis-password}" | base64 -d
REDIS_PASSWORD=
# TTL for session history (seconds). Default: 24h
REDIS_TTL_SECONDS=86400

# ============================================================================
# OPTIONAL CONFIGURATION (Change for production!)
# ============================================================================
POSTGRESQL_PASSWORD=
KEYCLOAK_ADMIN_PASSWORD=

TURN_USERNAME=june-user
STUNNER_PASSWORD=

# ============================================================================
# ADVANCED CONFIGURATION
# ============================================================================
POD_NETWORK_CIDR=10.244.0.0/16
GPU_ENABLED=false
GPU_TIMESLICING_REPLICAS=2
