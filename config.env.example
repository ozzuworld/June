# June Platform Configuration
# Copy this file to config.env and update with your values

# ============================================
# CORE CONFIGURATION (Required)
# ============================================

# Domain Configuration
DOMAIN=ozzu.world

# Let's Encrypt Certificate
LETSENCRYPT_EMAIL=admin@ozzu.world

# AI Service API Key
GEMINI_API_KEY=your_gemini_api_key_here

# DNS Provider API Key (for cert-manager)
CLOUDFLARE_TOKEN=your_cloudflare_token_here

# ============================================
# SERVICE PASSWORDS (Change in Production)
# ============================================

# PostgreSQL Database
POSTGRESQL_PASSWORD=Pokemon123!

# Keycloak Admin
KEYCLOAK_ADMIN_PASSWORD=Pokemon123!

# TURN Server (STUNner)
TURN_USERNAME=june-user
STUNNER_PASSWORD=Pokemon123!

# ============================================
# GPU CONFIGURATION (Optional)
# ============================================

# GPU Time-slicing (for shared GPU access)
GPU_TIMESLICING_REPLICAS=2

# Enable local AI services (requires GPU)
ENABLE_STT=false
ENABLE_TTS=false

# ============================================
# VAST.AI CONFIGURATION (Optional)
# For remote GPU resources
# ============================================

# Vast.ai API Key
VAST_API_KEY=your_vast_api_key_here

# GPU Preferences
VAST_GPU_TYPE=RTX3090
VAST_MAX_PRICE_PER_HOUR=0.50
VAST_MIN_GPU_MEMORY=12000
VAST_RELIABILITY_SCORE=0.95
VAST_MIN_DOWNLOAD_SPEED=100
VAST_MIN_UPLOAD_SPEED=100

# Location Preferences
VAST_DATACENTER_LOCATION=US
VAST_PREFERRED_REGIONS="US,CA"
VAST_VERIFIED_ONLY=true
VAST_RENTABLE_ONLY=true

# ============================================
# HEADSCALE/TAILSCALE CONFIGURATION (Optional)
# For private network access via self-hosted VPN
# ============================================

# Headscale Server
HEADSCALE_DOMAIN=headscale.ozzu.world
HEADSCALE_NAMESPACE=headscale
HEADSCALE_USER=june-platform

# Enable Tailscale sidecars for services
ENABLE_TAILSCALE_SIDECARS=false

# Kubernetes Network Configuration (for subnet routing)
K8S_SERVICE_CIDR=10.96.0.0/12
K8S_POD_CIDR=10.244.0.0/16