# Cloud Build config for june-stt
substitutions:
  _REGION: us-central1
  _SERVICE: june-stt
  _REPO: june

steps:
- name: 'gcr.io/cloud-builders/docker'
  args: ['build','-t','${_REGION}-docker.pkg.dev/${PROJECT_ID}/${_REPO}/${_SERVICE}:$COMMIT_SHA','.']
- name: 'gcr.io/cloud-builders/docker'
  args: ['push','${_REGION}-docker.pkg.dev/${PROJECT_ID}/${_REPO}/${_SERVICE}:$COMMIT_SHA']
- name: 'gcr.io/google.com/cloudsdktool/cloud-sdk'
  entrypoint: gcloud
  args:
    - run
    - deploy
    - ${_SERVICE}
    - --image=${_REGION}-docker.pkg.dev/${PROJECT_ID}/${_REPO}/${_SERVICE}:$COMMIT_SHA
    - --region=${_REGION}
    - --platform=managed
    - --allow-unauthenticated
    - --service-account=stt-svc@${PROJECT_ID}.iam.gserviceaccount.com
    - --concurrency=1
    - --cpu=2
    - --memory=1Gi
    - --timeout=3600
    - --min-instances=1

images:
- '${_REGION}-docker.pkg.dev/${PROJECT_ID}/${_REPO}/${_SERVICE}:$COMMIT_SHA'

options:
  logging: CLOUD_LOGGING_ONLY
