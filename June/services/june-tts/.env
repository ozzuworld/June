# June TTS Service Configuration

# === Server Configuration ===
PORT=50000
HOST=0.0.0.0
LOG_LEVEL=INFO

# === CosyVoice2 Model Configuration ===
MODEL_DIR=pretrained_models/CosyVoice2-0.5B
ENABLE_FP16=true

# === LiveKit Configuration ===
LIVEKIT_ENABLED=true
LIVEKIT_WS_URL=wss://livekit.ozzu.world
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret
LIVEKIT_ROOM_NAME=ozzu-main

# === Audio Configuration ===
# CosyVoice2 default sample rate
SAMPLE_RATE=22050
# Chunk size for streaming (milliseconds)
CHUNK_SIZE_MS=20

# === Performance Settings ===
# Number of worker processes
WORKERS=1
# GPU device (auto-detect by default)
CUDA_VISIBLE_DEVICES=0

# === Orchestrator Integration ===
ORCHESTRATOR_URL=http://june-orchestrator.june-services.svc.cluster.local:8080
ORCHESTRATOR_API_KEY=

# === Feature Flags ===
ENABLE_ZERO_SHOT=true
ENABLE_CROSS_LINGUAL=true
ENABLE_INSTRUCT=true
ENABLE_VOICE_CONVERSION=true