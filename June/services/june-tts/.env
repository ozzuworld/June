# June TTS Configuration
PORT=8000
LOG_LEVEL=INFO
WORKERS=1

# OpenVoice Settings
MAX_FILE_SIZE=52428800
MAX_CONCURRENT_REQUESTS=5

# GPU Settings (set FORCE_CPU=true for CPU-only mode)
FORCE_CPU=true
CUDA_VISIBLE_DEVICES=0

# Security (configure these for production)
KEYCLOAK_SERVER_URL=https://june-idp.allsafe.world/auth
KEYCLOAK_REALM=june
KEYCLOAK_CLIENT_ID=external-tts-client
TTS_CLIENT_SECRET=your-secret-here

# Production settings
ENVIRONMENT=development
